{
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true
  },
  "ecmaFeatures": {
    "modules": true
  },
  "plugins": ['react'],
  "rules": {
    "brace-style": [ 2, "1tbs", { "allowSingleLine": true } ],
    "eol-last": 0,
    "strict": 0,
    "no-dupe-keys": 2,
    "no-invalid-regexp": 2,
    "no-irregular-whitespace": 2,
    "no-labels": 0,
    "no-obj-calls": 2,
    "no-unreachable": 2,
    "no-shadow": 0,
    "no-trailing-spaces": 0,
    "no-unused-vars": [ 2, { "vars": "all", "args": "after-used", "varsIgnorePattern": "React|ReactDOM" } ],
    "no-mixed-spaces-and-tabs": [ 2, "smart-tabs" ],
    "valid-typeof": 2,
    "semi": [ 2, "always" ],
    "quotes": [2, "single", "avoid-escape"],
    "no-underscore-dangle": 0,
    "camelcase": 0,
    "no-use-before-define": [2, "nofunc"]
  }
}
